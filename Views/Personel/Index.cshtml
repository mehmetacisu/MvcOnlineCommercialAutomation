@using MvcTicariOtomasyon.Models.Siniflar
@model List<Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table  mt-2">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Fotoğraf</th>
        <th>Departman</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var pers in Model)
    {
        <tr>
            <td>@pers.Id</td>
            <td>@pers.Ad</td>
            <td>@pers.Soyad</td>
            <td>
                <img src="@pers.Fotograf" title="@pers.Ad" width="100" height="50"/>
            </td>
            <td>@pers.Departman.Ad</td>
            <td>
                <a href="/Personel/Guncelle/@pers.Id" class="btn btn-warning">Güncelle</a>
                <a href="/Departman/SatisDetay/@pers.Id" class="btn btn-primary">Detay</a>
            </td>
        </tr>
    }
</table>
<a href="/Personel/Ekle" class="btn btn-success">Personel Ekle</a>
