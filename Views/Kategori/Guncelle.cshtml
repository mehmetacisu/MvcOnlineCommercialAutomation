@model MvcTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-2 text-center">Güncelleme Formu</h2>
@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div class="mt-2">
        @Html.HiddenFor(x=>x.Id)
        @Html.LabelFor(x => x.Ad)
        @Html.TextBoxFor(x => x.Ad,new {@class="form-control"})
    </div>
    <div>
        <button type="submit" class="btn btn-warning mt-2">Güncelle</button>
    </div>
}

