@model MvcTicariOtomasyon.Models.Siniflar.Fatura
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-2 text-center">Fatura Güncelleme Formu</h2>
@using (Html.BeginForm("FaturaGuncelle", "Fatura", FormMethod.Post))
{
<div class="mt-2">
    @Html.HiddenFor(x => x.Id)
    @Html.LabelFor(x => x.SeriNo)
    @Html.TextBoxFor(x => x.SeriNo, new { @class = "form-control mb-2" })

    @Html.LabelFor(x => x.SiraNo)
    @Html.TextBoxFor(x => x.SiraNo, new { @class = "form-control mb-2" })

    @Html.LabelFor(x => x.VergiDairesi)
    @Html.TextBoxFor(x => x.VergiDairesi, new { @class = "form-control mb-2" })

    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control mb-2" })

    @Html.LabelFor(x => x.Saat)
    @Html.TextBoxFor(x => x.Saat, new { @class = "form-control mb-2" })

    @Html.LabelFor(x => x.TeslimEden)
    @Html.TextBoxFor(x => x.TeslimEden, new { @class = "form-control mb-2" })

    @Html.LabelFor(x => x.TeslimAlan)
    @Html.TextBoxFor(x => x.TeslimAlan, new { @class = "form-control mb-2" })
</div>
    <div>
        <button type="submit" class="btn btn-warning mt-2">Güncelle</button>
    </div>
}

