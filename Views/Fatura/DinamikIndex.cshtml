@model  MvcTicariOtomasyon.Models.Siniflar.DinamikFatura

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DinamikIndex</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
<body>
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <h2 class="panel-title text-center">
                    <strong>Fatura & Kalem İşlemleri</strong>
                </h2>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newOrderModal" onclick="addNewOrder()">Fatura Girişi</button>
            </div>
        </div>
        @*Fatura Listesi*@
        @foreach (var item in Model.degerFatura)
        {
            <div class="panel-body">
                <table class="table table-striped table-responsive">
                    <tbody>
                        <tr>
                            <td>Seri-SıraNo : @item.SeriNo-@item.SiraNo</td>
                            <td>Teslim Eden : @item.TeslimEden</td>
                            <td>Tarih : @item.Tarih</td>
                            <td>Vergi Dairesi : @item.VergiDairesi</td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <th>Açıklama</th>
                                            <th>Miktar</th>
                                            <th>Fiyat</th>
                                            <th>Tutar</th>
                                        </tr>
                                        @{
                                            var totalBill = 0;
                                        }
                                        @foreach (var fk in item.FaturaKalems)
                                        {
                                            <tr>
                                                <td>@fk.Aciklama</td>
                                                <td>@fk.Miktar</td>
                                                <td>@fk.BirimFiyat</td>
                                                <td>@fk.Tutar</td>
                                            </tr>
                                            totalBill = totalBill + @Convert.ToInt32(fk.Tutar);
                                        }
                                    </tbody>
                                </table>
                                <span class="text-right"><strong>Toplam Tutar :  </strong> @totalBill</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>
    @*Adım 2*@
    <div class="modal" id="newOrderModal">
        <div class="modal-dialog modal-lg" style=" width: 900px !important;">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 class="text-center">Yeni Fatura Girişi</h4>
                </div>
                <form id="NewOrderForm">
                    <div class="modal-body">
                        @*Fatura Detayları*@
                        <h5 style="color:#ff6347">Fatura Detayları</h5>
                        <hr />
                        <div class="form-horizontal">
                            <input type="hidden" id="Id" />
                            <div class="row form-group">
                                <label class="control-label col-md-2 mt-1">
                                    Seri No
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="SeriNo" name="SeriNo" placeholder="Seri No" class="form-control mb-1" />
                                </div>
                                <label class="control-label col-md-2  mt-1">
                                    Sıra No
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="SiraNo" name="SiraNo" placeholder="Sıra Numarası" class="form-control mb-1" />
                                </div>
                                <label class="control-label col-md-2  mt-1">
                                    Tarih
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="Tarih" name="Tarih" placeholder="Tarihi Giriniz" class="form-control mb-1" />
                                </div>
                                <label class="control-label col-md-2  mt-1">
                                    Vergi Dairesi
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="VergiDairesi" name="VergiDairesi" placeholder="Vergi Dairesi" class="form-control mb-1" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-2  mt-1">
                                    Saat
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="saat" name="saat" placeholder="Saati Giriniz" class="form-control mb-1" />
                                </div>
                                <label class="control-label col-md-2  mt-1">
                                    Teslim Eden
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="TeslimEden" name="TeslimEden" placeholder="Teslim Eden" class="form-control mb-1" />
                                </div>

                                <label class="control-label col-md-2  mt-1">
                                    Teslim Alan
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="TeslimAlan" name="TeslimAlan" placeholder="Teslim Alan" class="form-control mb-1" />
                                </div>
                                <label class="control-label col-md-2  mt-1">
                                    Toplam Tutar
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="Toplam" name="Toplam" placeholder="Toplam Tutar" class="form-control mb-1" />
                                </div>
                            </div>
                            @*Fatura Kalemleri*@
                            <h5 style="margin-top:10px;color:#ff6347">Fatura Kalemler</h5>
                            <hr />
                            <div class="form-horizontal">
                                <input type="hidden" id="id" />
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Açıklama
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="Aciklama" name="Aciklama" placeholder="Açıklama" class="form-control" />
                                    </div>
                                    <label class="control-label col-md-2">
                                        Fiyat
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="BirimFiyat" name="BirimFiyat" placeholder="Birim Fiyat" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Miktar
                                    </label>
                                    <div class="col-md-4">
                                        <input type="number" id="Miktar" name="Miktar" placeholder="Miktar" class="form-control" />
                                    </div>
                                    <div class="col-md-2 col-lg-offset-4">
                                        <a id="addToList" class="btn btn-primary">Listeye Ekle</a>
                                    </div>
                                </div>
                                <table id="detailsTable" class="table">
                                    <thead>
                                        <tr>
                                            <th style="width:30%">Açıklama</th>
                                            <th style="width:20%">Miktar</th>
                                            <th style="width:15%">Fiyat</th>
                                            <th style="width:25%">Tutar</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="reset" class="btn btn-default" data-dismiss="modal">Kapat</button>
                            <button id="saveOrder" type="submit" class="btn btn-success">Faturayı Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @*Adım 3*@
    @section scripts{
        <script>
            //Show Modal.
            function addNewOrder() {
                $("#newOrderModal").modal();
            }
            //Add Multiple Order.
            $("#addToList").click(function (e) {
                e.preventDefault();
                if ($.trim($("#Aciklama").val()) == "" || $.trim($("#BirimFiyat").val()) == "" || $.trim($("#Miktar").val()) == "") return;
                var Aciklama = $("#Aciklama").val(),
                    BirimFiyat = $("#BirimFiyat").val(),
                    Miktar = $("#Miktar").val(),
                    detailsTableBody = $("#detailsTable tbody");
                var degerler = '<tr><td>' + Aciklama + '</td><td>' + BirimFiyat + '</td><td>' + Miktar + '</td><td>' + (parseFloat(BirimFiyat) * parseInt(Miktar)) + '</td><td><a data-itemId="0" href="#" class="deleteItem">Remove</a></td></tr>';
                detailsTableBody.append(degerler);
                clearItem();
            });
            //After Add A New Order In The List, Clear Clean The Form For Add More Order.
            function clearItem() {
                $("#Aciklama").val('');
                $("#BirimFiyat").val('');
                $("#Miktar").val('');
            }
            // After Add A New Order In The List, If You Want, You Can Remove It.
            $(document).on('click', 'a.deleteItem', function (e) {
                e.preventDefault();
                var $self = $(this);
                if ($(this).attr('data-itemId') == "0") {
                    $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {
                        $(this).remove();
                    });
                }
            });
            //After Click Save Button Pass All Data View To Controller For Save Database
            function saveOrder(data) {
                return $.ajax({
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    type: 'POST',
                    url: "/Fatura/FaturaKaydet",
                    data: data,
                    success: function (result) {
                        alert(result);
                        location.reload();
                    },
                    error: function () {
                        alert("Error!")
                    }
                });
            }
            //Collect Multiple Order List For Pass To Controller
            $("#saveOrder").click(function (e) {
                e.preventDefault();
                var orderArr = [];
                orderArr.length = 0;
                $.each($("#detailsTable tbody tr"), function () {
                    orderArr.push({
                        Aciklama: $(this).find('td:eq(0)').html(),
                        Miktar: $(this).find('td:eq(1)').html(),
                        BirimFiyat: $(this).find('td:eq(2)').html(),
                        Tutar: $(this).find('td:eq(3)').html()
                    });
                });
                var data = JSON.stringify({
                    SeriNo: $("#SeriNo").val(),
                    SiraNo: $("#SiraNo").val(),
                    Tarih: $("#Tarih").val(),
                    VergiDairesi: $("#VergiDairesi").val(),
                    Saat: $("#Saat").val(),
                    TeslimEden: $("#TeslimEden").val(),
                    TeslimAlan: $("#TeslimAlan").val(),
                    Toplam: $("#Toplam").val(),
                    kalemler: orderArr
                });
                $.when(saveOrder(data)).then(function (response) {
                    console.log(response);
                }).fail(function (err) {
                    console.log(err);
                });
            });
        </script>
    }
</body>
</html>
