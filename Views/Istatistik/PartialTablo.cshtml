@model IEnumerable<MvcTicariOtomasyon.Models.Siniflar.SinifGrup2>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
            @{int siraNo = 0; }
            @foreach (var pers in Model)
            {
                <tr>
                    <td>@{siraNo++;} @siraNo</td>
                    <td>@pers.Departman</td>
                    <td>
                        @if (pers.Sayi == 1)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-danger" style="width: 55%"></div>
                            </div>
                        }
                        @if (pers.Sayi == 2)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width: 55%"></div>
                            </div>
                        }
                        @if (pers.Sayi == 3)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-indigo" style="width: 55%"></div>
                            </div>
                        }
                    </td>
                    <td>
                        @if (pers.Sayi == 1)
                        {
                            <span class="badge bg-danger">@pers.Sayi</span>
                        }
                        @if (pers.Sayi == 2)
                        {
                            <span class="badge bg-warning">@pers.Sayi</span>
                        }
                        @if (pers.Sayi == 3)
                        {
                            <span class="badge bg-indigo">@pers.Sayi</span>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
