@using MvcTicariOtomasyon.Models.Siniflar
@model List<Cari>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Cari Bilgileri</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Şehir</th>
                            <th>Durum</th>
                            <th>Mail</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cari in Model)
                        {
                            <tr>
                                <td>@cari.Id</td>
                                <td>@cari.Ad @cari.Soyad</td>
                                <td>@cari.Sehir</td>
                                <td>
                                    <span class="tag tag-success">
                                        @cari.Durum
                                    </span>
                                </td>
                                <td>@cari.Mail</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

