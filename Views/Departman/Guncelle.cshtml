@model MvcTicariOtomasyon.Models.Siniflar.Departman
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-2 text-center text-warning">Departman Güncelleme Formu</h2>
@using (Html.BeginForm("DepartmanGuncelle", "Departman", FormMethod.Post))
{
    <div class="mt-2">
        @Html.HiddenFor(x => x.Id)
        @Html.LabelFor(x => x.Ad)
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    </div>
    <div>
        <button type="submit" class="btn btn-warning mt-2">Güncelle</button>
    </div>
}

